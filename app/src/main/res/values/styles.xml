<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="answer_1"><item name="android:background">#AED6F1</item></style>
    <style name="answer_2"><item name="android:background">#A3F2B7</item></style>
    <style name="answer_3"><item name="android:background">#F2F775</item></style>
    <style name="answer_4"><item name="android:background">#F78C75</item></style>

    <style name="empty_input">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>


    <style name="answers_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_margin">20dp</item>


    </style>

</resources>
